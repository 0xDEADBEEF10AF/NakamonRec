<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <!-- 総合戦績カード (フィルタ: 全て) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_total_win_rate"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>

            <TextView
                android:id="@+id/valTotalRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F09199"
                android:textSize="48sp"
                android:textStyle="bold"
                android:text="@string/status_none"/>

            <TextView
                android:id="@+id/valTotalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:text="@string/status_none"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/valTotalWinLose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:text="@string/status_none"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- パーティ別戦績エリア -->
    <LinearLayout
        android:id="@+id/layoutParties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardTotal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- P1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardP1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#444444">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_p1" android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold"/>
                <TextView android:id="@+id/valP1Rate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#F09199" android:textSize="18sp" android:textStyle="bold" android:text="@string/status_none"/>
                <TextView android:id="@+id/valP1Usage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#90D7EC" android:textSize="11sp" android:text="@string/status_none"/>
                <TextView android:id="@+id/valP1WinLoseShort" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#AAAAAA" android:textSize="11sp" android:text="@string/status_none" android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView android:id="@+id/imgP1M1" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p1" />
                    <ImageView android:id="@+id/imgP1M2" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p1" />
                    <ImageView android:id="@+id/imgP1M3" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p1" />
                    <ImageView android:id="@+id/imgP1M4" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p1" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- P2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardP2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#444444">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_p2" android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold"/>
                <TextView android:id="@+id/valP2Rate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#F09199" android:textSize="18sp" android:textStyle="bold" android:text="@string/status_none"/>
                <TextView android:id="@+id/valP2Usage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#90D7EC" android:textSize="11sp" android:text="@string/status_none"/>
                <TextView android:id="@+id/valP2WinLoseShort" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#AAAAAA" android:textSize="11sp" android:text="@string/status_none" android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView android:id="@+id/imgP2M1" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p2" />
                    <ImageView android:id="@+id/imgP2M2" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p2" />
                    <ImageView android:id="@+id/imgP2M3" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p2" />
                    <ImageView android:id="@+id/imgP2M4" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p2" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- P3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardP3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#444444">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/label_p3" android:textColor="#FFFFFF" android:textSize="12sp" android:textStyle="bold"/>
                <TextView android:id="@+id/valP3Rate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#F09199" android:textSize="18sp" android:textStyle="bold" android:text="@string/status_none"/>
                <TextView android:id="@+id/valP3Usage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#90D7EC" android:textSize="11sp" android:text="@string/status_none"/>
                <TextView android:id="@+id/valP3WinLoseShort" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#AAAAAA" android:textSize="11sp" android:text="@string/status_none" android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView android:id="@+id/imgP3M1" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p3" />
                    <ImageView android:id="@+id/imgP3M2" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p3" />
                    <ImageView android:id="@+id/imgP3M3" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p3" />
                    <ImageView android:id="@+id/imgP3M4" android:layout_width="22dp" android:layout_height="22dp" android:layout_margin="1dp" android:scaleType="centerCrop" android:contentDescription="@string/label_p3" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/layoutParties"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/btn_back"
        android:textColor="#FFFFFF"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#444444"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:elevation="8dp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAnalyze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/btn_analyze"
        android:textColor="#FFFFFF"
        app:icon="@android:drawable/ic_menu_search"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#444444"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:elevation="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>