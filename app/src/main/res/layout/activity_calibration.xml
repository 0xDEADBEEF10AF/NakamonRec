<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.android.nakamonrec.CalibrationView
        android:id="@+id/calibrationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 操作パネルを2行形式にしてスタイリッシュに -->
    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC222222"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calibrate_guide_default"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <Button
                android:id="@+id/btnCancel"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="@string/btn_back"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:background="#444444" />

            <Button
                android:id="@+id/btnDefault"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="@string/btn_default"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:background="#444444" />

            <Button
                android:id="@+id/btnAuto"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="@string/btn_auto"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:background="#444444" />

            <Button
                android:id="@+id/btnSave"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:text="@string/btn_save_calibration"
                android:textColor="#90D7EC"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="#444444" />
        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>