<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".MainActivity">

    <!-- バージョン表示 (上端から64dp) -->
    <TextView
        android:id="@+id/textVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="@string/app_version"
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- ヘルプボタン (上端から48dp) -->
    <ImageButton
        android:id="@+id/btnReadme"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_help"
        app:tint="#666666"
        android:contentDescription="@string/readme_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- 上部ヘッダー：ファイル管理 ＆ 校正 -->
    <LinearLayout
        android:id="@+id/layoutTopHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCurrentFile"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="9"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333"
            app:strokeWidth="1dp"
            app:strokeColor="#444444"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textCurrentFile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                app:drawableStartCompat="@android:drawable/ic_menu_save"
                android:drawablePadding="12dp"
                app:drawableTint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="default_record.json" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnCalibrate"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1.5"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#333333">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="#AAAAAA"
                    android:contentDescription="@string/btn_calibrate" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- 中央：メインアクションエリア -->
    <FrameLayout
        android:id="@+id/centerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTopHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomButtons">

        <com.android.nakamonrec.ArcTextView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleService"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_rec"
            android:textSize="32sp"
            android:textStyle="bold"
            app:cornerRadius="90dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F09199"
            app:strokeWidth="6dp"
            app:strokeColor="#CCFFFFFF"
            android:elevation="12dp"
            app:elevation="12dp" />
    </FrameLayout>

    <!-- 下部：戦績サマリー ＆ リセット -->
    <LinearLayout
        android:id="@+id/layoutBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnShowHistory"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="9"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#333333">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/valTotalRateMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:drawableStartCompat="@android:drawable/ic_menu_sort_by_size"
                    android:drawablePadding="12dp"
                    app:drawableTint="#FFFFFF"
                    android:textColor="#F09199"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="--.-%" />

                <TextView
                    android:id="@+id/valTotalCountMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="0 Matches" />

                <TextView
                    android:id="@+id/valTotalWinLoseMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="0W - 0L" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnResetHistory"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1.5"
            android:layout_margin="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#333333">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="#F09199"
                    android:contentDescription="@string/btn_reset" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
