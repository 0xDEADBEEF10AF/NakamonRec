<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555555"
    tools:context=".MainActivity">

    <!-- 左上のバージョン表示 -->
    <TextView
        android:id="@+id/textVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="@string/app_version"
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- 右上のヘルプボタン -->
    <ImageButton
        android:id="@+id/btnReadme"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_help"
        app:tint="#CCCCCC"
        android:contentDescription="@string/readme_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- タイトルロゴ -->
    <TextView
        android:id="@+id/textLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/centerLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleService"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/btn_rec"
            android:textSize="32sp"
            android:textStyle="bold"
            app:cornerRadius="90dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F09199"
            app:strokeWidth="8dp"
            app:strokeColor="#FFFFFF"
            android:elevation="12dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/footerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#666666"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/footerGuideline"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/textCurrentFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/current_file_format"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:text="使用ファイル名: default_stats" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- 左上: ファイル管理 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManageFileName"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="@string/btn_manage"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    app:icon="@android:drawable/ic_menu_preferences"
                    app:iconSize="32dp"
                    app:iconGravity="top"
                    app:iconPadding="4dp"
                    app:backgroundTint="#555555"
                    app:cornerRadius="12dp" />

                <!-- 右上: キャプチャ校正 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCalibrate"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="@string/btn_calibrate"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    app:icon="@android:drawable/ic_menu_camera"
                    app:iconSize="32dp"
                    app:iconGravity="top"
                    app:iconPadding="4dp"
                    app:backgroundTint="#555555"
                    app:cornerRadius="12dp" />

                <!-- 左下: 戦績チェック -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowHistory"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="@string/btn_history"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    app:icon="@android:drawable/ic_menu_sort_by_size"
                    app:iconSize="32dp"
                    app:iconGravity="top"
                    app:iconPadding="4dp"
                    app:backgroundTint="#555555"
                    app:cornerRadius="12dp" />

                <!-- 右下: データリセット -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetHistory"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:text="@string/btn_reset"
                    android:textSize="12sp"
                    android:textColor="#F09199"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconSize="32dp"
                    app:iconTint="#F09199"
                    app:iconGravity="top"
                    app:iconPadding="4dp"
                    app:backgroundTint="#555555"
                    app:cornerRadius="12dp" />

            </GridLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
